<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <title>File Explore - LumenCloud</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
      /* Assure que le menu déroulant est au-dessus des autres éléments */
      .dropdown-menu {
        z-index: 10;
      }
    </style>
  </head>

  <body class="bg-gray-900 text-white flex min-h-screen">
    <%- include('../components/sidebar') %>
    <main class="flex-grow p-8 sm:ml-64 max-w-7xl mx-auto">
      <div class="mb-8">
        <h1 class="text-3xl font-bold mb-2">File Explore</h1>
      </div>

      <section>
        <div
          class="bg-gray-800 p-6 rounded-lg shadow-xl col-span-1 md:col-span-2 lg:col-span-1"
        >
          <div
            class="flex items-center justify-between mb-6 border-b border-gray-700 pb-4"
          >
            <h2 class="text-2xl font-bold flex items-center gap-3">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-6 w-6 text-indigo-400"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
                stroke-width="2"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z"
                />
              </svg>
              Files
            </h2>

            <div class="flex items-center gap-4">
              <input
                type="text"
                placeholder="Search files..."
                class="bg-gray-700 text-white rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all duration-200 w-full max-w-xs"
              />
              <button
                class="bg-indigo-500 hover:bg-indigo-400 text-white font-semibold py-2 px-4 rounded-lg transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 focus:ring-offset-gray-800"
                onclick="document.getElementById('uploadModal').classList.remove('hidden')"
              >
                Upload
              </button>
            </div>
          </div>
          <ul class="space-y-4">
            <% files.forEach(file => { %>
            <li class="group">
              <div
                class="flex items-center gap-4 p-4 bg-gray-700 rounded-lg transition-all duration-200 ease-in-out hover:bg-gray-600 focus-within:bg-gray-600 relative"
              >
                <div
                  class="flex-shrink-0 w-10 h-10 flex items-center justify-center bg-indigo-500 rounded-md text-white group-hover:bg-indigo-400 transition-colors duration-200"
                >
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="h-6 w-6"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                    stroke-width="2"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
                    />
                  </svg>
                </div>
                <div class="flex-grow min-w-0">
                  <p class="text-lg font-medium truncate text-white">
                    <%= file.name %>
                  </p>
                  <p class="text-sm text-gray-400 mt-1"><%= file.size %></p>
                </div>

                <div class="relative inline-block text-left">
                  <button
                    type="button"
                    class="p-2 rounded-full text-gray-400 hover:text-white hover:bg-gray-700 transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 focus:ring-offset-gray-800 opacity-0 group-hover:opacity-100 focus-within:opacity-100"
                    id="menu-button-<%= file.id %>"
                    aria-expanded="true"
                    aria-haspopup="true"
                    onclick="toggleDropdown(event, 'dropdown-<%= file.id %>')"
                  >
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      class="h-5 w-5"
                      viewBox="0 0 20 20"
                      fill="currentColor"
                    >
                      <path
                        d="M10 6a2 2 0 110-4 2 2 0 010 4zM10 12a2 2 0 110-4 2 2 0 010 4zM10 18a2 2 0 110-4 2 2 0 010 4z"
                      />
                    </svg>
                  </button>

                  <div
                    id="dropdown-<%= file.id %>"
                    class="origin-top-right absolute right-0 mt-2 w-56 rounded-md shadow-lg bg-gray-700 ring-1 ring-black ring-opacity-5 focus:outline-none hidden dropdown-menu"
                    role="menu"
                    aria-orientation="vertical"
                    aria-labelledby="menu-button-<%= file.id %>"
                    tabindex="-1"
                  >
                    <div class="py-1" role="none">
                      <a
                        href="/file/explore/download/<%= file.id %>"
                        class="text-gray-300 block px-4 py-2 text-sm hover:bg-gray-600 hover:text-white"
                        role="menuitem"
                        tabindex="-1"
                        id="menu-item-0"
                        onclick="closeAllDropdowns()"
                      >
                        <svg
                          xmlns="http://www.w3.org/2000/svg"
                          class="h-5 w-5 inline-block mr-2"
                          fill="none"
                          viewBox="0 0 24 24"
                          stroke="currentColor"
                          stroke-width="2"
                        >
                          <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"
                          />
                        </svg>
                        Télécharger
                      </a>
                      <button
                        onclick="showDeleteModal('<%= file.id %>', '<%= file.name %>')"
                        class="text-gray-300 w-full text-left block px-4 py-2 text-sm hover:bg-gray-600 hover:text-white"
                        role="menuitem"
                        tabindex="-1"
                        id="menu-item-1"
                      >
                        <svg
                          xmlns="http://www.w3.org/2000/svg"
                          class="h-5 w-5 inline-block mr-2 text-red-400"
                          fill="none"
                          viewBox="0 0 24 24"
                          stroke="currentColor"
                          stroke-width="2"
                        >
                          <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"
                          />
                        </svg>
                        Supprimer
                      </button>
                    </div>
                  </div>
                </div>
              </div>
            </li>
            <% }) %>
          </ul>
        </div>
      </section>
    </main>
  </body>

  <div
    id="uploadModal"
    class="fixed inset-0 flex items-center justify-center bg-gray-800 bg-opacity-75 z-50 hidden"
  >
    <div
      class="bg-gray-900 rounded-lg shadow-lg p-6 w-full max-w-md text-white"
    >
      <h2 class="text-xl font-bold mb-4">Upload File</h2>
      <form
        id="uploadForm"
        action="/file/explore/upload"
        method="post"
        enctype="multipart/form-data"
      >
        <div
          class="border-2 border-dashed border-gray-600 rounded-lg p-6 text-center mb-4"
        >
          <svg
            class="mx-auto h-12 w-12 text-gray-500"
            stroke="currentColor"
            fill="none"
            viewBox="0 0 48 48"
            aria-hidden="true"
          >
            <path
              d="M28 8H12a4 4 0 00-4 4v20m32-12v8m0 0v8a4 4 0 01-4 4H12a4 4 0 01-4-4v-4m32-4l-3.1-3.1a4 4 0 00-5.4 0L24 24M28 16a4 4 0 100-8 4 4 0 000 8z"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            />
          </svg>
          <p class="mt-1 text-sm text-gray-500">
            <span class="font-semibold">Drag and drop</span> your files here
          </p>
        </div>

        <div class="relative mb-4">
          <div
            id="fileNameDisplay"
            class="mb-2 text-sm text-gray-400 truncate hidden"
          ></div>

          <input
            type="file"
            name="file"
            id="fileInput"
            class="hidden"
            required
          />
          <label
            for="fileInput"
            class="w-full text-center bg-indigo-500 hover:bg-indigo-400 text-white font-semibold py-2 px-4 rounded-lg cursor-pointer transition-colors"
          >
            Select File
          </label>
        </div>

        <div class="flex justify-end">
          <button
            type="button"
            class="bg-gray-300 hover:bg-gray-400 text-gray-800 font-semibold py-2 px-4 rounded-lg mr-2"
            onclick="closeUploadModal()"
          >
            Cancel
          </button>
          <button
            type="submit"
            class="bg-indigo-500 hover:bg-indigo-400 text-white font-semibold py-2 px-4 rounded-lg"
          >
            Uploader
          </button>
        </div>
      </form>
    </div>
  </div>

  <div
    id="deleteModal"
    class="fixed inset-0 flex items-center justify-center bg-gray-800 bg-opacity-75 z-50 hidden"
  >
    <div
      class="bg-gray-900 rounded-lg shadow-lg p-6 w-full max-w-md text-white"
    >
      <h2 class="text-xl font-bold mb-4 text-red-400">
        Confirmation of Deletion
      </h2>
      <p class="text-gray-300 mb-6">
        Are you sure you want to delete the file?
        <span id="deleteFileName" class="font-semibold"></span> ? This action is
        irreversible.
      </p>
      <div class="flex justify-end">
        <button
          type="button"
          class="bg-gray-300 hover:bg-gray-400 text-gray-800 font-semibold py-2 px-4 rounded-lg mr-2"
          onclick="closeDeleteModal()"
        >
          Cancel
        </button>
        <button
          type="button"
          id="confirmDeleteButton"
          class="bg-red-500 hover:bg-red-400 text-white font-semibold py-2 px-4 rounded-lg"
        >
          Delete
        </button>
      </div>
    </div>
  </div>

  <script>
    // --- Scripts for the upload modal ---
    const fileInput = document.getElementById("fileInput");
    const fileNameDisplay = document.getElementById("fileNameDisplay");

    fileInput.addEventListener("change", () => {
      if (fileInput.files.length > 0) {
        fileNameDisplay.textContent = fileInput.files[0].name;
        fileNameDisplay.classList.remove("hidden");
      } else {
        fileNameDisplay.classList.add("hidden");
      }
    });

    function resetUploadModal() {
      fileInput.value = "";
      fileNameDisplay.classList.add("hidden");
    }

    function closeUploadModal() {
      const modal = document.getElementById("uploadModal");
      modal.classList.add("hidden");
      resetUploadModal();
    }

    // --- Scripts for searching files ---
    document
      .querySelector('input[placeholder="Search files..."]')
      .addEventListener("input", function (e) {
        const searchTerm = e.target.value.toLowerCase();
        const fileItems = document.querySelectorAll("li.group");
        fileItems.forEach((item) => {
          const fileName = item.querySelector("p").textContent.toLowerCase();
          if (fileName.includes(searchTerm)) {
            item.style.display = "";
          } else {
            item.style.display = "none";
          }
        });
      });

    // --- Scripts for dropdowns and delete modals ---
    function toggleDropdown(event, dropdownId) {
      event.stopPropagation();
      const dropdown = document.getElementById(dropdownId);
      closeAllDropdowns(dropdown); // Close the other dropdowns
      dropdown.classList.toggle("hidden");
    }

    function closeAllDropdowns(excludeDropdown = null) {
      const dropdowns = document.querySelectorAll(".dropdown-menu");
      dropdowns.forEach((dropdown) => {
        if (dropdown !== excludeDropdown) {
          dropdown.classList.add("hidden");
        }
      });
    }

    // Close dropdowns if user clicks outside
    window.onclick = function (event) {
      if (
        !event.target.closest(".relative.inline-block") &&
        !event.target.closest(".dropdown-menu")
      ) {
        closeAllDropdowns();
      }
    };

    function showDeleteModal(fileId, fileName) {
      closeAllDropdowns(); // Ensure that the menu is closed
      const modal = document.getElementById("deleteModal");
      const fileNameSpan = document.getElementById("deleteFileName");
      const confirmButton = document.getElementById("confirmDeleteButton");

      fileNameSpan.textContent = fileName;
      confirmButton.onclick = function () {
        // Send a POST request to the delete route
        const form = document.createElement("form");
        form.method = "POST";
        form.action = `/file/explore/delete/${fileId}`;
        document.body.appendChild(form);
        form.submit();
      };
      modal.classList.remove("hidden");
    }

    function closeDeleteModal() {
      const modal = document.getElementById("deleteModal");
      modal.classList.add("hidden");
    }
  </script>
  <script src="/js/sidebar.js"></script>
</html>

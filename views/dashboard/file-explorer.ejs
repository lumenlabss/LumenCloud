<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <title>File Explore - LumenCloud</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>

  <body class="bg-gray-900 text-white flex min-h-screen">
    <%- include('../components/sidebar') %>
    <main class="flex-grow p-8 sm:ml-64 max-w-7xl mx-auto">
      <div class="mb-8">
        <h1 class="text-3xl font-bold mb-2">File Explore</h1>
      </div>

      <section>
        <div
          class="bg-gray-800 p-6 rounded-lg shadow-xl col-span-1 md:col-span-2 lg:col-span-1"
        >
          <div
            class="flex items-center justify-between mb-6 border-b border-gray-700 pb-4"
          >
            <h2 class="text-2xl font-bold flex items-center gap-3">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-6 w-6 text-indigo-400"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
                stroke-width="2"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z"
                />
              </svg>
              Files
            </h2>

            <div class="flex items-center gap-4">
              <input
                type="text"
                placeholder="Search files..."
                class="bg-gray-700 text-white rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all duration-200 w-full max-w-xs"
              />
              <button
                class="bg-indigo-500 hover:bg-indigo-400 text-white font-semibold py-2 px-4 rounded-lg transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 focus:ring-offset-gray-800"
                onclick="document.getElementById('uploadModal').classList.remove('hidden')"
              >
                Upload
              </button>
            </div>
          </div>
          <ul class="space-y-4">
            <% files.forEach(file => { %>
            <li class="group">
              <a
                href="#"
                class="flex items-center gap-4 p-4 bg-gray-700 rounded-lg transition-all duration-200 ease-in-out hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 focus:ring-offset-gray-800 active:bg-gray-500"
              >
                <div
                  class="flex-shrink-0 w-10 h-10 flex items-center justify-center bg-indigo-500 rounded-md text-white group-hover:bg-indigo-400 transition-colors duration-200"
                >
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="h-6 w-6"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                    stroke-width="2"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
                    />
                  </svg>
                </div>
                <div class="flex-grow min-w-0">
                  <p class="text-lg font-medium truncate text-white">
                    <%= file.name %>
                  </p>
                  <p class="text-sm text-gray-400 mt-1"><%= file.size %> KB</p>
                </div>
                <div class="flex-shrink-0 text-sm text-gray-400">
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="h-5 w-5"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                    stroke-width="2"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      d="M9 5l7 7-7 7"
                    />
                  </svg>
                </div>
              </a>
            </li>
            <% }) %>
          </ul>
        </div>
      </section>
    </main>
  </body>

  <div
    id="uploadModal"
    class="fixed inset-0 flex items-center justify-center bg-gray-800 bg-opacity-75 z-50 hidden"
  >
    <div
      class="bg-gray-900 rounded-lg shadow-lg p-6 w-full max-w-md text-white"
    >
      <h2 class="text-xl font-bold mb-4">Upload File</h2>
      <form id="uploadForm">
        <div
          class="border-2 border-dashed border-gray-600 rounded-lg p-6 text-center mb-4"
        >
          <svg
            class="mx-auto h-12 w-12 text-gray-500"
            stroke="currentColor"
            fill="none"
            viewBox="0 0 48 48"
            aria-hidden="true"
          >
            <path
              d="M28 8H12a4 4 0 00-4 4v20m32-12v8m0 0v8a4 4 0 01-4 4H12a4 4 0 01-4-4v-4m32-4l-3.1-3.1a4 4 0 00-5.4 0L24 24M28 16a4 4 0 100-8 4 4 0 000 8z"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            />
          </svg>
          <p class="mt-1 text-sm text-gray-500">
            <span class="font-semibold">Drag and drop</span> your files here
          </p>
        </div>

        <div class="relative mb-4">
          <div
            id="fileNameDisplay"
            class="mb-2 text-sm text-gray-400 truncate hidden"
          ></div>

          <input
            type="file"
            name="file"
            id="fileInput"
            class="hidden"
            required
          />
          <label
            for="fileInput"
            class="w-full text-center bg-indigo-500 hover:bg-indigo-400 text-white font-semibold py-2 px-4 rounded-lg cursor-pointer transition-colors"
          >
            Select File
          </label>
        </div>

        <div class="flex justify-end">
          <button
            type="button"
            class="bg-gray-300 hover:bg-gray-400 text-gray-800 font-semibold py-2 px-4 rounded-lg mr-2"
            onclick="closeModal()"
          >
            Cancel
          </button>
          <button
            type="submit"
            class="bg-indigo-500 hover:bg-indigo-400 text-white font-semibold py-2 px-4 rounded-lg"
          >
            Uploader
          </button>
        </div>
      </form>
    </div>
  </div>

  <script>
    const fileInput = document.getElementById("fileInput");
    const fileNameDisplay = document.getElementById("fileNameDisplay");

    fileInput.addEventListener("change", () => {
      if (fileInput.files.length > 0) {
        // Get the file name and show it
        fileNameDisplay.textContent = fileInput.files[0].name;
        fileNameDisplay.classList.remove("hidden");
      } else {
        // Hide the display if no file is selected
        fileNameDisplay.classList.add("hidden");
      }
    });

    // A function to reset the file input and display when the modal closes or is canceled
    function resetUploadModal() {
      fileInput.value = ""; // Reset the input value
      fileNameDisplay.classList.add("hidden"); // Hide the file name display
    }

    function closeModal() {
      const modal = document.getElementById("uploadModal");
      modal.classList.add("hidden");
      resetUploadModal(); // Call the reset function
    }
  </script>
  <script>
    // Function search files
    document
      .querySelector('input[placeholder="Search files..."]')
      .addEventListener("input", function (e) {
        const searchTerm = e.target.value.toLowerCase();
        const fileItems = document.querySelectorAll("li.group");

        fileItems.forEach((item) => {
          const fileName = item.querySelector("p").textContent.toLowerCase();
          if (fileName.includes(searchTerm)) {
            item.style.display = "";
          } else {
            item.style.display = "none";
          }
        });
      });
  </script>

  <script src="/js/sidebar.js"></script>
</html>
